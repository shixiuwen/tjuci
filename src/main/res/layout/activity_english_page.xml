<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlashPage"
    android:background="#6478e7"
    android:padding="15dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="meiriyignwen"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/english_ib_setting"
                android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
                android:background="@drawable/english_sharebtn_selector"/>
            <ImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/english_ib_share"
                android:layout_marginLeft="10dp"
                android:src="@drawable/abc_ic_menu_share_mtrl_alpha"
                android:background="@drawable/english_sharebtn_selector"/>
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:background="#b2bbf1"
            android:padding="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="good good study, day day up!"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="#b2bbf1"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/english_tv_transport"
                android:text="好好学习，天天向上"/>
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/english_btn_login"
            android:layout_alignParentLeft="true"
            android:text="登陆"
            android:background="@drawable/english_btn_selector"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/english_btn_register"
            android:layout_centerInParent="true"
            android:text="注册"
            android:background="@drawable/english_btn_selector"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/english_btn_enter"
            android:layout_alignParentRight="true"
            android:text="主页"
            android:background="@drawable/english_btn_selector"/>
    </RelativeLayout>

</LinearLayout>
